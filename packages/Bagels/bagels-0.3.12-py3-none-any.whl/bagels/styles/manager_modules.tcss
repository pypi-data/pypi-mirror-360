/* ------------ Spending ------------ */

#spending-container {
  height: 1fr;
  layout: grid;
  grid-size: 1 3;
  grid-rows: 1 1fr 2;

  Button {
    width: auto;
  }


  & > Horizontal {
    align-horizontal: center;
  }

  & > #top-controls-container {
    & > .current-view-label {
      margin-left: 2;
      margin-right: 2;
    }
  }

  & > #bottom-controls-container {
    border-top: round $panel;
  }
}

/* ------------- Budgets ------------ */

#budgets-container {
  height: auto;

  & > .config-rows {
    border-bottom: round $panel;
    height: 2;
    & > Label {
      margin-right: 2;
    }
    & > Button {
      width: auto;
      margin-right: 1;
      background: $panel;
    }
    & > Input {
      dock: right;
      width: 12;

      &.invalid {
        border-left: outer $error;
      }
    }
  }

  .empty-bar {
    width: 1fr;
    height: 3;
    hatch: right $panel-lighten-2;
    align: center middle;
  }

  #income-bar {
    height: 9;
    align-vertical: middle;
    
    & > #row-0 {
      width: 1fr;
      layout: horizontal;
      height: 1;

      #remaining {
        dock: right;
        width: auto;
        opacity: 0.5;
      }
    }

    & > #row-1 {
      layout: grid;
      grid-size: 3 1;
      width: 1fr;
      height: 1;
      
      & > #bar-spent {
        background: $accent;
      }
      & > #bar-saving {
        background: $secondary;
      }
      & > #bar-remaining {
        background: $panel;
      }
    }

    & > #row-2 {
      layout: grid;
      grid-size: 2 1;
      height: 1;
    }

    & > #row-3 {
      layout: grid;
      grid-size: 3 1;
      margin-top: 1;
      height: 1;

      #want {
        align-horizontal: right;
      }
    }

    & > #row-4 {
      layout: grid;
      width: 1fr;
      grid-size: 5 1;
      height: 1;
      
      & > #bar-spent-must {
        hatch: "/" $secondary;
      }
      & > #bar-spent-need {
        hatch: "/" $success;
      }
      & > #bar-spent-want {
        hatch: "/" $accent;
      }
      & > #bar-spent-quota {
        hatch: "/" $panel;
      }
      & > Label {
        hatch: "Â·" $panel;
        width: 1fr;
        text-align: center;
        color: $panel;
        background: transparent;
      }
    }

    & > #row-5 {
      align-horizontal: right;
      height: 1;

      & > #bar-must-quota {
        hatch: "/" $accent;
      }
    }
  }
}

