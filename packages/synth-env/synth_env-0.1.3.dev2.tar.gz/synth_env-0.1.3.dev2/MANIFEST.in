# Include essential files
include README.md
include LICENSE
include pyproject.toml

# Include source code
recursive-include src/synth_env *.py

# Include necessary data files but exclude large databases
recursive-include src/synth_env *.json
recursive-include src/synth_env *.yaml
recursive-include src/synth_env *.yml
recursive-include src/synth_env *.toml
recursive-include src/synth_env *.txt
recursive-include src/synth_env *.md

# Exclude large database files
global-exclude *.db
global-exclude *.sqlite
global-exclude *.sqlite3

# Exclude cache files
global-exclude __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude .DS_Store
global-exclude .cache

# Exclude large datasets and model files
global-exclude *.arrow
global-exclude *.npy
global-exclude *.npz
global-exclude *.pkl
global-exclude *.pickle

# Exclude development/testing files
global-exclude *test*
global-exclude *demo*
global-exclude *example*
global-exclude agent_demos
global-exclude .pytest_cache
global-exclude .coverage
global-exclude coverage.xml

# Exclude git and editor files
global-exclude .git*
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo

# Exclude build artifacts
global-exclude dist
global-exclude build
global-exclude *.egg-info

# Exclude uv.lock files
global-exclude uv.lock 