# Bitbucket Cloud MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Your Bitbucket username
BITBUCKET_USERNAME=your_username

# Your Bitbucket app password (not your account password!)
# Create one at: https://bitbucket.org/account/settings/app-passwords/
BITBUCKET_TOKEN=your_app_password

# Your default workspace name (usually your username or organization)
BITBUCKET_DEFAULT_WORKSPACE=your_workspace

# Optional: Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
