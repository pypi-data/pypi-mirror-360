# AI Safety Configuration for {{ app_name }}
# Generated by AI Safety Guardrails template system

detectors:
{% for detector_name, detector_config in safety_config.detectors.items() %}
  {{ detector_name }}:
    enabled: {{ detector_config.enabled | lower }}
    {% if detector_config.threshold is defined -%}
    threshold: {{ detector_config.threshold }}
    {% endif -%}
    {% if detector_config.sensitivity is defined -%}
    sensitivity: {{ detector_config.sensitivity }}
    {% endif -%}
    {% if detector_config.model is defined -%}
    model: {{ detector_config.model }}
    {% endif -%}
{% endfor %}

models:
  cache_dir: "~/.ai_safety_models"
  auto_download: true
  download_timeout: 300

safety:
  fail_mode: "open"  # "open" allows on failure, "closed" blocks on failure
  max_concurrent_detections: 5
  detection_timeout: 30

logging:
  level: "INFO"
  file: "./{{ app_name }}_safety.log"