            "timeout": 10,
            "spec_file_path": "runner/openapi/zcp/zcp_alert_backend_openapi_spec.json",
            "auth_config": {
                "type": "ApiKey",
                "api_key_name": "X-Access-Key",
                "api_key_value": "zmp-09bae73d-9f59-491a-ae06-7747e8f79883"
            },
            "tool_config": {
                "api_maps": [
                    {
                        "path":"/api/alert/v1/alerts",
                        "methods": ["get"]
                    },
                    {
                        "path":"/api/alert/v1/alerts",
                        "methods": ["post"]
                    },
                    {
                        "path":"/api/alert/v1/alerts/{alert_id}",
