# Include essential files for LOCAL MCP CLIENT
include README.md
include LICENSE
include pyproject.toml
include requirements.txt

# Include CORE source code only (for local MCP client)
include src/premium_futures_mcp/__init__.py
include src/premium_futures_mcp/__main__.py
include src/premium_futures_mcp/server.py
include src/premium_futures_mcp/config.py
include src/premium_futures_mcp/client.py
include src/premium_futures_mcp/public_client.py
include src/premium_futures_mcp/tools.py
include src/premium_futures_mcp/handlers.py
include src/premium_futures_mcp/intelligent_tools.py
include src/premium_futures_mcp/cache.py
include src/premium_futures_mcp/response_optimizer.py
include src/premium_futures_mcp/fallback_data.py
include src/premium_futures_mcp/remote_auth.py

# Include documentation
recursive-include docs *.md

# EXCLUDE server admin files (not needed for local users)
exclude src/premium_futures_mcp/key_bot.py
exclude src/premium_futures_mcp/key_manager.py
exclude src/premium_futures_mcp/auth.py
exclude src/premium_futures_mcp/market_monitor.py
exclude src/premium_futures_mcp/market_intelligence.py
exclude src/premium_futures_mcp/public_api.py

# Exclude development and deployment files
exclude *.sh
exclude docker-compose.yml
exclude Dockerfile
exclude .env*
exclude .git*
exclude *.db
exclude *.service

# Exclude test files
exclude test_*.py
exclude *_test.py
recursive-exclude tests *

# Exclude cache and build artifacts
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.egg-info
global-exclude .DS_Store

# Exclude deployment scripts and configs
exclude generate_key.sh
exclude init_db.sh
exclude fix_db_ownership.sh
exclude restart_redis.sh
exclude publish.sh
exclude push_to_github.sh
exclude populate_test_data.py
exclude refresh_market_data.py
exclude redis_config.py
exclude redis_to_json_bot.py

# Exclude data and logs
recursive-exclude data *
recursive-exclude logs *
recursive-exclude redis_cache_exports *
recursive-exclude __pycache__ *
recursive-exclude dist *
recursive-exclude docker *
recursive-exclude scripts *
recursive-exclude examples *
