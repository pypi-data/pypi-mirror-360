{% macro render(id="", type="", text="badge", class="", text_size="text-xs") %}

{#
Supported types: default, dark, danger, warning, success
#}

{% if type=="danger" %}
    <p class="text-center bg-red-100 text-red-800 {{ text_size }} font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-red-400 border border-red-400 {{ class }} ">{{ text }}</p>
{% elif type=="warning" %}
    <p class="text-center bg-yellow-100 text-yellow-800 {{ text_size }} font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-yellow-300 border border-yellow-300 {{ class }} ">{{ text }}</p>
{% elif type=="success" %}
    <p class="text-center bg-green-100 text-green-800 {{ text_size }} font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-green-400 border border-green-400 {{ class }} ">{{ text }}</p>
{% elif type=="dark" %}
    <p class="text-center bg-gray-100 text-gray-800 {{ text_size }} font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-gray-400 border border-gray-500 {{ class }} ">{{ text }}</p>    
{% else %}
    <p class="text-center bg-blue-100 text-blue-800 {{ text_size }} font-medium me-2 px-2.5 py-0.5 rounded dark:bg-gray-700 dark:text-blue-400 border border-blue-400 {{ class }} ">{{ text }}</p>
{% endif %}



{% endmacro %}