{% macro render(id="", class="") %}

<div id="{{id}}" role="table-static" class="flex flex-col {{ class }}">
    <div class="overflow-x-auto">
        <div class="inline-block min-w-full align-middle">
        <div class="overflow-hidden shadow">
            <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-600">
                <thead class="border border-gray-200  dark:border-gray-700 bg-gray-50 dark:bg-gray-700">
                    <tr>
                        {{ caller("header_cells") }}
                    </tr>
                </thead>
                <tbody class="bg-white dark:bg-gray-800">
                    {{ caller("body_rows") }}
                </tbody>
            </table>
        </div>
    </div>
    </div>
</div>

{% endmacro %}