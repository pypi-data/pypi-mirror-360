{% macro render(
    id="",
    name="",
    value="",
    class="",
    placeholder="",
    pattern=None,
    disabled=False,
    readonly=False,
    required=False,
    is_password=False,
    additional_attribs=""
) %}


{% set class_values = "bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" %}
{% if readonly %}
    {% set class_values = class_values + " cursor-not-allowed" %}
    {% set additional_attribs = additional_attribs + " readonly" %}
{% endif %}

{% if disabled %}
    {% set class_values = "bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500" %}
    {% set additional_attribs = additional_attribs + " disabled aria-label=\"disabled input\" " %}
{% endif %}


{% if pattern %}
    {% set additional_attribs = additional_attribs + " pattern=\"" + pattern + "\"" %}
{% endif %}

{% set type_value = "password" if is_password else "text"%}

<input id="{{id}}" type="{{type_value}}" name="{{name}}" value="{{ value }}" {% if required %} required {% endif %} placeholder="{{placeholder}}" class="{{class_values}} {{class}}"  {{additional_attribs}}>


{% endmacro %}