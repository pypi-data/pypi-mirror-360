{% macro render(class="", error_msg="") %}

<div id="flash-errors" class="flex w-full justify-center {{ class }}">
    <div class="flex border bg-red-700 rounded p-4">
        <span class="text-3xl">⚠️</span>
        <div class="ml-1 mt-1 flex flex-col px-1">
            <div class="text-red-50 font-medium">{{ error_msg }}</div>
        </div>
    </div>
</div>

{% endmacro %}