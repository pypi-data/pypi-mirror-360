{% macro render(id="", text=None, class="") %}

<th id="{{id}}" scope="col" class="{{ "%s p-2 font-medium tracking-wider align-top text-left text-gray-700 dark:text-white"|format(class) }}" >
    {% if text is not none %}
        {{ text }}
    {% else %}
        {{ caller() }}
    {% endif %}
</th>

{% endmacro %}