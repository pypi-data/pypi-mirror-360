{% macro render(id="", class="", highlight_row_enabled=True) %}

{% set highlight_row_enabled_classes = "hover:bg-gray-50 dark:hover:bg-gray-600" if highlight_row_enabled else "" %}
<tr id="{{id}}" class="{{ "%s border border-gray-200 dark:border-gray-700 %s"|format(class, highlight_row_enabled_classes) }}" >
    {{ caller () }}
</tr>

{% endmacro %}