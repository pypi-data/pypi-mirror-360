{% macro render(
    id="",
    text=None,
    class="",
    row_span=1,
    col_span=1,
    word_wrap=False
) %}

{% set word_wrap_class = "white" if word_wrap else "whitespace-nowrap" %}
<td id="{{id}}" class="{{ "%s p-2 font-normal align-top text-gray-500 dark:text-gray-400 %s"|format(class, word_wrap_class) }}" colspan="{{col_span}}" rowspan="{{col_span}}" >
    {% if text is not none %}
        {{ text }}
    {% else %}
        {{ caller() }}
    {% endif %}
</td>

{% endmacro %}