{% macro render(
id="radio-group",
options=[],
style="default",
class="",
default_checked="",
disabled=False,
required=False,
additional_attribs=""
) %}

{% set layout='' %}
{% set margin_format='mb-4'%}

{% if style == 'in-line' %}
    {% set layout='flex' %}
    {% set margin_format='me-4'%}
{% endif %}

<div class="{{layout}}">
    {% for option in options %}
        <div class="flex items-center {{margin_format}}">
            <input {% if option == default_checked %} checked {% endif %} id="{{ option }}" type="radio" value="{{ option }}" name="{{ id }}" {% if disabled %} disabled {% endif %} {% if required %} required {% endif %} {{additional_attribs}}
                class="bg-gray-100 rounded border-gray-300 text-primary-600 focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600 {{ class }}">
            <label for="{{option}}">{{option}}</label>
        </div>
    {% endfor %}
</div>

{% endmacro %}
