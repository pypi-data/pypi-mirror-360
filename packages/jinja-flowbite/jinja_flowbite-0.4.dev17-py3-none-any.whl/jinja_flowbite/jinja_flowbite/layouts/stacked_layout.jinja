{% extends 'jinja_flowbite//layouts/app.jinja' %}

{% block flowbite_layout_content %}

  <div class="antialiased bg-gray-50 dark:bg-gray-900 h-screen flex flex-col ">


    <nav class="border-b bg-gray-800 border-gray-700">
        <div class="px-4 py-2.5 flex flex-wrap justify-between items-center" >

            <!-- Left-Side Component Group -->
            <div class="flex justify-start items-center">

                {% block flowbite_header_content_left_outlet required  %}{% endblock %}
                
            </div>

            <!-- Center Component Group -->
            <div class="flex justify-center items-center">

                {% block flowbite_header_content_center_outlet  %}{% endblock %}
                
            </div>


            <!-- Right-Side Component Group -->
            <div class="flex items-center space-x-2 lg:order-2">

                {% block flowbite_header_content_right_outlet required  %}{% endblock %}
                
            </div>
        </div>
    </nav>
  
    <div class="h-screen flex flex-col justify-between flex-auto overflow-y-auto">
  
        <section class="flex-auto flex overflow-y-auto">
  
            <main class="bg-gray-50 dark:bg-gray-900 overflow-auto w-full">

              {% block flowbite_page_body_outlet required  %}{% endblock %}
            
            </main>
  
        </section>
  
        <footer class="flex items-center justify-between border-t border-gray-700 text-white space-x-4 w-full p-2 bg-gray-800 {{ class }}" >
    
            {% block flowbite_footer_content_outlet required  %}{% endblock %}
            
        </footer>
  
    </div>
  
  </div>
  
{% endblock %}




