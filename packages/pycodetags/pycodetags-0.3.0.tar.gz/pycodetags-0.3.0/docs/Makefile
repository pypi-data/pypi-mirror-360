# =====================================
# ğŸ› ï¸  Makefile for MkDocs in /docs/
# =====================================

# Paths
MKDOCS_CONFIG := ../mkdocs.yml
SITE_DIR := ../site
DOCS_DIR := .
MARKDOWN_FILES := $(shell find $(DOCS_DIR) -name '*.md')

# -------------------------------------
# ğŸ§½ Help: List available targets
# -------------------------------------
.PHONY: help
help:
	@echo ""
	@echo "ğŸ“š  MkDocs Documentation Commands"
	@echo ""
	@echo "  make serve     ğŸ”„ Serve the docs locally with live reload"
	@echo "  make build     ğŸ—ï¸  Build the static site to ../site/"
	@echo "  make clean     ğŸ§¹ Delete the generated site directory"
	@echo "  make lint      ğŸ” Lint markdown files using markdownlint"
	@echo "  make doctor    ğŸš‘ Run mkdocs doctor to check config & links"
	@echo ""

# -------------------------------------
# ğŸš€ Serve: Run the local dev server
# -------------------------------------
.PHONY: serve
serve:
	mkdocs serve --config-file $(MKDOCS_CONFIG)

# -------------------------------------
# ğŸ”¨ Build: Generate the static site
# -------------------------------------
.PHONY: build
build:
	mkdocs build --clean --config-file $(MKDOCS_CONFIG)

# -------------------------------------
# ğŸ§½ Clean: Remove the site/ output
# -------------------------------------
.PHONY: clean
clean:
	rm -rf $(SITE_DIR)

# -------------------------------------
# ğŸ” Lint: Check Markdown formatting
# Requires: npm install -g markdownlint-cli
# -------------------------------------
.PHONY: lint
lint:
	mdformat *.md
	markdownlint *.md # $(MARKDOWN_FILES)
	linkcheckMarkdown .

# -------------------------------------
# ğŸš‘ Doctor: Validate mkdocs setup (broken links, config, etc.)
# -------------------------------------
.PHONY: doctor
doctor: build
	@echo "ğŸ”— Running link checker on built siteâ€¦"
	# Example: check all links in the site/ directory (install linkchecker beforehand)
	linkchecker --ignore-url='/localhost:' ../site