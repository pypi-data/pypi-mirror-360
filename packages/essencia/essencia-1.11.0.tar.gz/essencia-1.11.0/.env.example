# Example environment configuration for Essencia Framework
# Copy this file to .env and update with your values
# NEVER commit .env file to version control

# REQUIRED: Encryption key for sensitive data
# Generate with: python -c "import secrets; import base64; print(base64.b64encode(secrets.token_bytes(32)).decode())"
ESSENCIA_ENCRYPTION_KEY="REPLACE_WITH_YOUR_GENERATED_KEY"

# Database configuration
MONGODB_URL="mongodb://localhost:27017/your_database"
REDIS_URL="redis://localhost:6379/0"

# Security settings
SESSION_SECRET="REPLACE_WITH_RANDOM_SECRET"
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
RATE_LIMIT_ENABLED="true"

# Logging
LOG_LEVEL="INFO"

# Key rotation reminder (days)
ESSENCIA_KEY_ROTATION_DAYS="90"

# Environment
ENVIRONMENT="development"