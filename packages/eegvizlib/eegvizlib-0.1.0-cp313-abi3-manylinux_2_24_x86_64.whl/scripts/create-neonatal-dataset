`%>%` <- magrittr::`%>%`

args <- commandArgs (trailingOnly = TRUE)

if ('-h' %in% args || '--help' %in% args) {
    cat (sprintf ("Usage: create-neonatal-dataset DIRECTORY ...\n"))
    cat (sprintf ("\n"))
    cat (sprintf ("Create a new, empty neonatal dataset in each DIRECTORY.\n"))
}

for (dirname in args) {
    if (!dir.exists(dirname)) {
        dir.create (dirname)
    }
    bootstrap_files_list <- tibble::tibble (filename = character(0))
    readr::write_csv (bootstrap_files_list, sprintf("%s/files.csv", dirname), col_names = FALSE)
}
