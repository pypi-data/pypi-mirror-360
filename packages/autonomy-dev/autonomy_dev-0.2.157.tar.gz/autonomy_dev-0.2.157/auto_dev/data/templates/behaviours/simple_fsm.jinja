import os
from abc import ABC
from typing import Optional, Any
from aea.skills.behaviours import FSMBehaviour, State
from enum import Enum


class {{class_name}}Events(Enum):
    """Events for the fsm."""
    {%for event in events %}
    {{event}} = '{{event}}'{% endfor %}

class {{class_name}}States(Enum):
    """States for the fsm."""
    {% for state in states %}
    {{state.upper()}} = '{{state.lower()}}'{% endfor %}

class BaseState(State, ABC):
    """Base class for states."""
    _state: {{class_name}}States = None

    def __init__(self, **kwargs: Any) -> None:
        super().__init__(**kwargs)
        self._event = None
        self._is_done = False  # Initially, the state is not done

    def is_done(self) -> bool:
        """Is done."""
        return self._is_done

    @property
    def event(self) -> Optional[str]:
        """Current event"""
        return self._event


# Define states
{% for state in states %}
class {{ state }}(BaseState):
    """This class implements the behaviour of the state {{ state }}."""
    _state = {{class_name}}States.{{state.upper()}}

    def act(self) -> None:
        """Perform the act."""
        print(f"Performing action for state {self._state}")
        self._is_done = True
        self._event = {{class_name}}Events.DONE
{% endfor %}


class {{class_name}}FsmBehaviour(FSMBehaviour):
    """This class implements a simple Finite State Machine behaviour."""

    rounds = [
        {% for state in states %}
        {{state}},
        {% endfor %}
    ]

    def __init__(self, **kwargs: Any) -> None:
        super().__init__(**kwargs)
        self.register_state({{class_name}}States.{{default_start_state.upper()}}.value, {{default_start_state}}(**kwargs), True)
        {% for state in final_states%}
        self.register_state({{class_name}}States.{{state.upper()}}.value, {{state}}(**kwargs)){% endfor %}
        {% if remaining_states %}
        {% for state in remaining_states%}
        self.register_state({{class_name}}States.{{state.upper()}}.value, {{state}}(**kwargs)) {% endfor %}{% endif %}
        {% for transition in transitions%}
        self.register_transition(
            source={{class_name}}States.{{transition.source.upper()}}.value, 
            event={{class_name}}Events.{{transition.event}},
            destination={{class_name}}States.{{transition.destination.upper()}}.value
        ){% endfor %}


    def setup(self) -> None:
        """Implement the setup."""
        self.context.logger.info("Setting up {{class_name}} FSM behaviour.")


    def teardown(self) -> None:
        """Implement the teardown."""
        self.context.logger.info("Tearing down {{class_name}} FSM behaviour.")

    def act(self) -> None:
        """Implement the act."""
        super().act()
        if self.current is None:
            self.context.logger.info("No state to act on.")
            self.terminate()

    def terminate(self) -> None:
        """Implement the termination."""
        print("Terminating the agent.")
        os._exit(0)
