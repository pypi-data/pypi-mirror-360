# Sample environment variables for the Flask app
# These will be automatically loaded and passed to the Lambda function as CloudFormation parameters

# Database configuration
DATABASE_URL=postgresql://user:password@localhost:5432/myapp
DATABASE_NAME=myapp_production
DB_HOST=my-database.cluster.amazonaws.com
DB_PORT=5432
DB_USER=myapp_user
DB_PASSWORD=my_secure_password

# API Keys
OPENAI_API_KEY=sk-your-openai-api-key-here
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here

# Application settings
DEBUG=false
LOG_LEVEL=info
ENVIRONMENT=production
STAGE=prod

# External services
REDIS_URL=redis://localhost:6379
S3_BUCKET=my-app-uploads
CLOUDFRONT_DOMAIN=d1234567890.cloudfront.net

# Feature flags
ENABLE_ANALYTICS=true
ENABLE_CACHE=true
MAX_UPLOAD_SIZE=10485760

# Upload configuration
UPLOADS_BUCKET_NAME=my-app-uploads-bucket 