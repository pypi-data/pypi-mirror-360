<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="stock_package_type_form">
        <field name="name">stock.package.type.form.delivery</field>
        <field name="model">stock.package.type</field>
        <field name="inherit_id" ref="stock.stock_package_type_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//sheet/group[@name='delivery']/group/div[@name='max_weight']"
                position="after"
            >
                <field name="is_base_weight_shipping_weight" />
            </xpath>
        </field>
    </record>
    <record model="ir.ui.view" id="stock_package_type_tree_inherit">
        <field name="name">stock.package.type.tree.inherit</field>
        <field name="model">stock.package.type</field>
        <field name="inherit_id" ref="stock.stock_package_type_tree" />
        <field name="arch" type="xml">
            <field name="max_weight" position="after">
                <field name="is_base_weight_shipping_weight" />
            </field>
        </field>
    </record>
</odoo>
