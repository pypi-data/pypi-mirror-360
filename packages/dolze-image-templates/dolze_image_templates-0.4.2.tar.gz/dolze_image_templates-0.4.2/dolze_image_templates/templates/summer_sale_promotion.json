{
  "name": "summer_sale_promotion",
  "description": "Modern summer sale promotion with bold typography and clean layout",
  "size": { "width": 2000, "height": 2000 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2000, "height": 2000 },
      "border_width": 0,
      "border_radius": 0,
      "tint_color": "${theme_color}",
      "tint": {
        "type": "linear",
        "colors": ["${theme_color}", [255, 255, 255, 0.1]],
        "opacity": 0.6,
        "direction": 0
      }
    },
    {
      "type": "cta_button",
      "text": "${brand_name}",
      "position": { "x": 150, "y": 100 },
      "size": { "width": 700, "height": 100 },
      "auto_width": false,
      "bg_color": "#ffffff",
      "text_color": "${theme_color}",
      "font_size": 55,
      "font_path": "Outfit-Bold",
      "corner_radius": 50
    },

    {
      "type": "text",
      "text": "${sale_heading}",
      "position": { "x": 150, "y": 300 },
      "font_size": 170,
      "color": [255, 255, 255],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 900,
      "line_height": 1.1,
      "letter_spacing": -1.5
    },
    {
      "type": "text",
      "text": "${sale_description}",
      "position": { "x": 150, "y": 850 },
      "font_size": 50,
      "color": [255, 255, 255, 1],
      "font_path": "Poppins-Medium",
      "alignment": "left",
      "max_width": 800,
      "line_height": 1.8,
      "letter_spacing": 1.4
    },
    {
      "type": "text",
      "text": "${discount_text}",
      "position": { "x": 150, "y": 1300 },
      "font_size": 120,
      "color": [255, 255, 255],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 500,
      "line_height": 1.2,
      "letter_spacing": -1
    },
    {
      "type": "cta_button",
      "text": "${social_handle}",
      "position": { "x": 150, "y": 1670 },
      "size": { "width": 700, "height": 100 },
      "auto_width": false,
      "bg_color": "#ffffff",
      "text_color": "${theme_color}",
      "font_size": 55,
      "font_path": "Outfit-Bold",
      "corner_radius": 50
    },
    {
      "type": "cta_button",
      "text": "${contact_number}",
      "position": { "x": 150, "y": 1800 },
      "size": { "width": 700, "height": 100 },
      "auto_width": false,
      "bg_color": "#ffffff",
      "text_color": "${theme_color}",
      "font_size": 55,
      "font_path": "Outfit-Bold",
      "corner_radius": 50
    }
  ]
}
