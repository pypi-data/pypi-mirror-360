[MASTER]
ignore-paths=tests/*,examples/*,.git/*,.tox/*,build/*

init-hook='import sys; from pathlib import Path; sys.path.append(str(Path(__file__).parent / ".venv" / "Lib" / "site-packages"))'

[MESSAGES CONTROL]
disable=C0114,C0115,C0116,E0401,R0903,C0415

[FORMAT]
max-line-length=88

[REPORTS]
output-format=colorized
