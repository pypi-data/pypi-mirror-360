# Environment Configuration for {{ project_name }}

# Django settings
SECRET_KEY=your-super-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

{% if config.use_postgresql %}
# Database settings
DB_NAME={{ project_name }}
DB_USER=postgres
DB_PASSWORD=your-db-password
DB_HOST=localhost
DB_PORT=5432
{% endif %}

{% if config.use_celery %}
# Celery settings
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
{% endif %}

# Email settings
DEFAULT_FROM_EMAIL=noreply@{{ project_name }}.com

{% if config.email_provider == 'sendgrid' %}
# SendGrid
SENDGRID_API_KEY=your-sendgrid-api-key
{% elif config.email_provider == 'mailgun' %}
# Mailgun
MAILGUN_USERNAME=your-mailgun-username
MAILGUN_PASSWORD=your-mailgun-password
{% endif %}

{% if config.use_sentry %}
# Sentry
SENTRY_DSN=your-sentry-dsn-here
ENVIRONMENT=development
{% endif %}

{% if config.use_drf %}
# CORS settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
{% endif %}

{% if config.use_stripe %}
# Stripe settings
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
DJSTRIPE_WEBHOOK_SECRET=whsec_your_djstripe_webhook_secret
{% endif %}

{% if config.storage_provider == 'aws' %}
# AWS storage settings
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1
{% elif config.storage_provider == 'gcp' %}
# Google Cloud storage settings
GCS_BUCKET_NAME=your-gcs-bucket-name
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
{% elif config.storage_provider == 'azure' %}
# Azure storage settings
AZURE_ACCOUNT_NAME=your-storage-account-name
AZURE_ACCOUNT_KEY=your-storage-account-key
AZURE_CONTAINER=your-container-name
{% elif config.storage_provider == 'cloudflare-r2' %}
# Cloudflare R2 storage settings (S3-compatible)
AWS_ACCESS_KEY_ID=your-r2-access-key
AWS_SECRET_ACCESS_KEY=your-r2-secret-key
AWS_STORAGE_BUCKET_NAME=your-r2-bucket-name
AWS_S3_ENDPOINT_URL=https://your-account-id.r2.cloudflarestorage.com
AWS_S3_REGION_NAME=auto
{% endif %}

{% if config.cloud_provider == 'aws' and config.storage_provider != 'aws' %}
# AWS deployment settings
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
{% elif config.cloud_provider == 'gcp' and config.storage_provider != 'gcp' %}
# Google Cloud deployment settings
GCP_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json
{% elif config.cloud_provider == 'azure' and config.storage_provider != 'azure' %}
# Azure deployment settings
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_RESOURCE_GROUP=your-resource-group
{% endif %}