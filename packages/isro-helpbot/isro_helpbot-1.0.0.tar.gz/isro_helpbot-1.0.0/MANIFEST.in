# Core project files
include README.md
include LICENSE
include requirements.txt

# Frontend UI (Tailwind CSS + Vanilla JS)
recursive-include ui *

# Backend (FastAPI + Logic)
recursive-include isro_helpbot *

# Knowledge Graph builder components
recursive-include kg_builder *

# Static files (JS, images, styles, PDFs, etc.)
recursive-include ui/static *
recursive-include assets *

# Data models, checkpoints, and NLP data
recursive-include models *
recursive-include data *

# Text/CSV files used for knowledge ingestion
recursive-include . *.txt
recursive-include . *.csv

# Exclude unnecessary files
global-exclude __pycache__ *.py[cod] *.so .DS_Store Thumbs.db
