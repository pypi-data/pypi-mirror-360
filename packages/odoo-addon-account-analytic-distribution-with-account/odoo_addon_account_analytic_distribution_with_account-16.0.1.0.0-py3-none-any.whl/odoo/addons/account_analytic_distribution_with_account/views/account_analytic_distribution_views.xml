<odoo>
    <record
        id="account_analytic_distribution_with_account_tree_view"
        model="ir.ui.view"
    >
        <field name="name">account.analytic.distribution.with.account.tree.view</field>
        <field name="model">account.analytic.distribution.model</field>
        <field
            name="inherit_id"
            ref="analytic.account_analytic_distribution_model_tree_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='analytic_distribution']" position="before">
                <field name="account_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>

    <record
        id="account_analytic_distribution_with_account_form_view"
        model="ir.ui.view"
    >
        <field name="name">account.analytic.distribution.with.account.form.view</field>
        <field name="model">account.analytic.distribution.model</field>
        <field
            name="inherit_id"
            ref="analytic.account_analytic_distribution_model_form_view"
        />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_categ_id']" position="after">
                <field name="account_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>
</odoo>
